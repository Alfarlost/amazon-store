.well
  .row
  	.col-xs-8
  		%h4
  		  Billing Address
= form_for billing_address, :url => addresses_create_billing_address_path do |f|
  .row
  	.col-xs-4
  		= f.text_field :first_name, :placeholder => "First Name"
  		= f.text_field :last_name, :placeholder => "Last Name"
  		= f.text_field :addres, :placeholder => "Street Address"
  		= f.text_field :city, :placeholder => "City"
  		= f.text_field :coutry, :placeholder => "Country"
  		= f.number_field :zipcode, :placeholder => "Zip"
  		= f.phone_field :phone, :placeholder => "Phone"
  		= f.submit "SAVE AND CONTINUE", class: "btn btn-primary"
