.col-xs-4.col-xs-offset-4.text-center
  %h2 Log in
  - if current_page?('/customers/sign_in')
    = link_to image_tag("facebook.png"), customer_omniauth_authorize_path(:facebook)
    %h2
      or
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    %h2.form-signin-heading 
      = f.label :email, class: "sr-only"
      %br/
      = f.email_field :email, autofocus: true, class: "form-control", placeholder: "Your email"
      = f.label :password, class: "sr-only"
      = f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password"
    .actions
      = f.submit "Log in", class: "btn btn-lg btn-primary btn-block"
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me
    - if current_page?('/customers/sign_in')
      %p Wonna get account? #{link_to "Sign up", new_registration_path(resource_name)}
