.col-xs-4.col-xs-offset-4.text-center
  %h2 Sign up
  = link_to image_tag("facebook.png"), customer_omniauth_authorize_path(:facebook)
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    %h2.form-signin-heading 
      or
      = f.label :email, class: "sr-only"
    %br/
    = f.email_field :email, autofocus: true, class: "form-control", placeholder: "Your email"
    = f.label :password, class: "sr-only"
    = f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password"
    = f.label :password_confirmation, class: "sr-only"
    = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm Password"
    .actions
      = f.submit "Sign up", class: "btn btn-lg btn-primary btn-block"
    %p Have an account? #{link_to "Sign in", new_session_path(resource_name)}