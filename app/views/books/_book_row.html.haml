.well
  .row
    %h4= book.title
    .col-xs-2
      = image_tag book.image_url
    .col-xs-6{:style => "word-wrap: break-word"}
      %p.text-left= book.description
    .col-xs-4
      = form_for @orderitem, :url => orderitems_path do |f|
        %h4.text-right 
          Unit Price:
          %span(class="color: green")= number_to_currency book.price
        .input-group
          = f.number_field :quantity, value: 1, class: "form-control", min: 1
          .input-group-btn
            = f.hidden_field :book_id, {value: book.id}
            = f.submit "Add to Cart", class: "btn btn-primary"
